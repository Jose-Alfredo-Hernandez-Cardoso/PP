    def insertadatos(event):
        b=mysql.connector.connect(user="root", password="", host="localhost", database="derinter_registro", port="3306")
        #print(b)
        insert= b.cursor()
        #busqueda_de_usuario_registro.execute("SELECT * FROM derinter_registro WHERE No_Control='"+IDU.value+"' and CURP='"+CDC.value+"'")
        sql="""INSERT INTO derinter_reg (no_control, curp) VALUES  ('{0}','{1}')""".format(IDU.value,CDC.value)
        insert.execute(sql)
        b.commit()
        for dato in insert:
           print(dato)
