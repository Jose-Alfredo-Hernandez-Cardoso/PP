        t=ft.Text()
        














        def PI(e):
            t.value= (IP.value)
            DERIV= sp.diff(t.value)#(t.value + t.value)
            INTEG= sp.integrate(t.value)
            PDRD.value= DERIV  
            PDRI.value= INTEG
                        
            page.update()

















